<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:padding="5dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/to_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextViewTo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Agreement Number"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="45dp" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/garenteeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextViewGarentee"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hello"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="45dp" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fiscal_year_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextViewFiscalYear"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fiscal Year"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="45dp" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/NameOfBZ_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextViewNameOfBz"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name Of PA/BZ/CORRIDOR/CF"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="45dp"
                        />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal" />

</LinearLayout>